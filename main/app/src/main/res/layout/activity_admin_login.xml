<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_login">
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="25dp"


        android:layout_marginRight="25dp"
        android:layout_marginBottom="406dp"
        android:hint="  Email"
        android:transitionName="username"

        android:textColorHint="@color/entry"
        app:boxStrokeColor="@color/entry">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/unAdm"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/insaan"
            android:drawableLeft="@drawable/insaan"

            android:paddingStart="10dp"
            android:textColor="@color/blue"
            app:boxStrokeColor="@color/entry">


        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="20dp"


        android:layout_marginRight="20dp"
        android:layout_marginBottom="323dp"
        android:hint="  Password"
        android:transitionName="password"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/blue"
        android:textColorHint="@color/entry"
        app:boxStrokeColor="@color/entry">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/passAdm"
            android:layout_width="350dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"

            android:inputType="textPassword"
            android:drawableStart="@drawable/lockfin"
            android:drawableLeft="@drawable/lockfin"
            android:paddingStart="10dp"
            android:textColor="@color/blue"
            app:boxStrokeColor="@color/entry">


        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="145dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="136dp"
        android:layout_marginRight="136dp"
        android:layout_marginBottom="559dp"
        android:text="Login as admin!"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/admUn"
        app:layout_constraintEnd_toEndOf="@+id/admUn"
        app:layout_constraintStart_toStartOf="@+id/admUn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.619"
        tools:text="Admin Signin" />

    <Button
        android:id="@+id/admLi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="164dp"
        android:layout_marginRight="164dp"
        android:layout_marginBottom="179dp"
        android:background="@drawable/curved_rect"

        android:text="sign in"
        android:textColor="@color/colorPrimary"
        android:transitionName="button" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:layout_marginBottom="497dp"
        android:text="Login to get Adminstrator access" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="184dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="277dp"
        android:text="Remember Me" />


</RelativeLayout>