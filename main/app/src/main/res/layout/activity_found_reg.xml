<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foundReg">
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="532dp"
        android:hint=" Itemname"
        android:textColorHint="@color/entry"
        android:transitionName="username"
        app:boxStrokeColor="@color/entry">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/unReg"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:paddingStart="10dp"

            android:textColor="@color/blue"
            app:boxStrokeColor="@color/entry">
            >


        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="105dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="33dp"


        android:layout_marginRight="33dp"
        android:layout_marginBottom="409dp"
        android:hint="  Description (place/date/time)"
        android:textColorHint="@color/entry"
        app:boxStrokeColor="@color/entry">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/Reg"
            android:layout_width="345dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"

            android:paddingStart="10dp"
            android:textColor="@color/blue"
            app:boxStrokeColor="@color/entry">


        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="32dp"


        android:layout_marginRight="32dp"
        android:layout_marginBottom="332dp"
        android:hint="  contact details"
        android:textColorHint="@color/entry"
        app:boxStrokeColor="@color/entry">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/idReg"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:textColor="@color/blue"
            app:boxStrokeColor="@color/entry">


        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/hReg"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="101dp"
        android:layout_marginRight="101dp"
        android:layout_marginBottom="46dp"
        android:background="@drawable/rb"
        android:text="report"
        android:textColor="#ffffffff"
        android:transitionName="button"

        app:layout_constraintHorizontal_bias="0.456" />

    <ImageView
        android:id="@+id/foundImg"
        android:layout_width="158dp"
        android:layout_height="155dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="224dp"
        android:layout_marginRight="224dp"
        android:layout_marginBottom="144dp"
        app:srcCompat="@drawable/ic_image_black_24dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/curved_rect"
        android:text="pick image"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="376dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-20dp"
        android:layout_marginRight="-20dp"
        android:layout_marginBottom="608dp"
        android:text="Report the Item you've found!"
        android:textColor="@color/brown"
        android:textSize="24sp" />


</RelativeLayout>

